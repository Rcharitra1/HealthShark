@model List<HealthShark.Models.Models.UserPlan>


@{
    ViewData["Title"] = "Home Page";
}


    <div class="text-center" >
        <h2 class="text-danger font-weight-bold">Welcome to Health Shark Fitness and Trainers</h2>
    </div>


<div class="row">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/carousel/image1.webp"/>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/carousel/image2.webp" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/carousel/image3.webp" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />
<div class="row justify-content-center">
    <h3 class="text-black-50 text-center text-capitalize font-weight-bold"><u>Choose from a wide varity of Plans</u></h3>
</div>
<br />
<div class="container-xl">
    <div class="row justify-content-center">

        @if (Model.Count() == 0)
        {
            <p class="text-muted">Create/Edit plan to display here</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="card col-md-6 col-12 col-lg-4 pt-4 m-2" >
                    <img class="card-img" style="min-height:300px; max-height:300px" src=@item.ImageUrl alt="Card image cap">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.</p>
                        <p class="card-text">Duration: @item.Duration Hrs</p>

                        <p class="card-text">Price: @item.Price.ToString("c")</p>

                        @*<p class="card-text">Get as low as: @item.CouplePrice.ToString("c")</p>*@

                        <a class="btn btn-primary" asp-action="Details" asp-route-Id="@item.Id" >Details</a>
                    </div>
                </div>
            }
        }


    </div>
</div>


