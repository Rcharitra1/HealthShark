@model HealthShark.Models.Models.ViewModels.UserVM

@{
    ViewData["Title"] = "Home Page";
}




<div class="row">.
    <div class="col-6">
        <form method="post" enctype="multipart/form-data">
            <h2 class="text-success">Customer Details</h2>



            <div class="form-group">
                <label>Name</label>
                <input class="form-control" value="@Model.User.Name" disabled />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input class="form-control" value="@Model.User.Address" disabled />
            </div>


            <div class="form-group">
                <label>Weight</label>
                <input class="form-control" value="@Model.Weight" />
                <span asp-validation-for="@Model.Weight"></span>
            </div>


            <div class="form-group">
                <label>Height</label>
                <input class="form-control" value="@Model.Height" />
                <span asp-validation-for="@Model.Height"></span>
            </div>


            <div class="form-group">
                <label>Medical History</label>
                <input class="form-control" value="@Model.MedicalHistory" />
                <span asp-validation-for="@Model.MedicalHistory"></span>
            </div>



            <div class="form-group">
                <label>Allergies</label>
                <input class="form-control" value="@Model.Allergies" />
                <span asp-validation-for="@Model.Allergies"></span>
            </div>


            <div class="form-group">
                <label>BMI</label>
                <input class="form-control" value="@(double.IsNaN(Model.BMI)? 0.00:Model.BMI)" disabled />

            </div>


            <div class="form-group">
                <label>Image</label>
                <input class="form-control" type="file" id="uploadBox" onclick="ValidateInput()"/>

            </div>




            <div class="form-group">

            </div>












        </form>
    </div>
    <div class="col-6">

        <img class="img-fluid rounded" src="@Model.ImageUrl"/>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function ValidateInput() {
            let imgUpload = document.querySelector('uploadBox').Value.Trim();
            if (imgUpload=="") {
                return false;
            }
            return true;
        }
        
    </script>
}
