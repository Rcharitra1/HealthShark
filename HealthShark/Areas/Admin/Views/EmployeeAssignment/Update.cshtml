@model HealthShark.Models.Models.ViewModels.EmployeeAssignment
@using HealthShark.Utility 

  

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary">Update Customer</h1>
<form method="post">

    <div class="row p-3 border">

        <div class="col-8">
            <div class="col-4">
                <label asp-for="@Model.UserAssignmentVM.User.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.UserAssignmentVM.User.Name" class="form-control" disabled />

            </div>
            <div class="col-4">
                <label asp-for="@Model.UserAssignmentVM.UserPlan.Description"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.UserAssignmentVM.UserPlan.Description" class="form-control" disabled />

            </div>

            <div class="col-4">
                <label asp-for="@Model.UserAssignmentVM.UserPlan.Duration"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.UserAssignmentVM.UserPlan.Duration" class="form-control" disabled />
            </div>

            <div class="col-4">
                <label>BMI</label>
            </div>
            <div class="col-8">
                <input asp-for="@(Model.UserVM.BMI)" class="form-control" disabled />
            </div>
            <div class="col-4">
                <label>Current Weight</label>
            </div>
            <div class="col-8">
                <input asp-for="@(Model.UserVM.Weight)" class="form-control" disabled />
            </div>
            <div class="col-4">
                <label>Current Height</label>
            </div>
            <div class="col-8">
                <input asp-for="@(Model.UserVM.Height)" class="form-control" disabled />
            </div>






            @if (User.IsInRole(SD.Role_Trainer))
            {
                <div class="col-4">
                    <label>Current Diet</label>
                </div>
                <div class="col-8">
                    <input value="@(Model.UserAssignmentVM.DietId == null? "Not Assigned" : Model.UserAssignmentVM.Diet.Type)" class="form-control" disabled />
                </div>

                <div class="col-4">
                    <label>Work out</label>
                </div>

                <div class="col-8">
                    <select asp-for="@Model.UserAssignmentVM.WorkoutId" class="form-select form-control">
                        <option value="">Select an work out</option>
                        @foreach (var item in Model.workOutTypes)
                        {
                            <option value="@item.Id" checked="@item.Id==@Model.UserAssignmentVM.WorkoutId">@item.Type</option>
                        }
                    </select>
                </div>

                <div class="col-4">
                    <label>Body Type</label>
                </div>

                <div class="col-8">
                    <select asp-for="@Model.UserAssignmentVM.BodyTypeId" class="form-select form-control">
                        <option value="">Select an body type</option>
                        @foreach (var item in Model.bodyTypes)
                        {
                            <option asp-for="@item.Id" checked="@item.Id==@Model.UserAssignmentVM.BodyTypeId">@item.Description</option>
                        }
                    </select>
                </div>

            }

            @if (User.IsInRole(SD.Role_Dietician))
            {
                <div class="col-4">
                    <label>Diet</label>
                </div>

                <div class="col-8">
                    <select asp-for="@Model.UserAssignmentVM.Diet" class="form-select form-control">
                        <option value="">Select a diet</option>
                        @foreach (var item in Model.diets)
                        {
                            <option value="@item.Id" checked="@item.Id==@Model.UserAssignmentVM.Diet">@item.Description</option>
                        }
                    </select>
                </div>

                <div class="col-4">
                    <label>Workout Assigned</label>
                </div>
                <div class="col-8">
                    <input value="@(Model.UserAssignmentVM.WorkoutId == null? "Not Assigned" : Model.UserAssignmentVM.WorkOut.Description)" class="form-control" disabled />
                </div>
                <div class="col-4">
                    <label>Body Type</label>
                </div>
                <div class="col-8">
                    <input value="@(Model.UserAssignmentVM.BodyTypeId == null? "Not Assigned" : Model.UserAssignmentVM.BodyType.Description)" class="form-control" disabled />
                </div>
            }

        <div class="form-group row mt-2">
            <div class="col-12">
                <div class="row ml-1">
                    <div class="col">
                        <a class="btn btn-success" asp-action="Index" asp-area="Admin" asp-controller="EmployeeAssignment" onclick="return confirm('You sure want to leave this page?')">Back To Details</a>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary text-white px-3" asp-route-userAssignment="@Model">Update</button>
                    </div>
                </div>
               
            </div>
            
        </div>



             









            </div>

            <div class="col-4">
                <img src=@Model.UserVM.ImageUrl class="img-fluid rounded mt-4" />
            </div>



        </div>
</form>


